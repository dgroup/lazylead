# When sync mode is true, all output is immediately flushed
# to the underlying operating system and is not buffered internally.
STDOUT.sync = true

require "slop"
require "sqlite3"
require "rainbow"
require "backtrace"
require "memory_profiler"
require_relative "../lib/lazylead/allocated"
require_relative "../lib/lazylead/fake_log"
require_relative "../lib/lazylead/cli/app"

Thread.current.name = "main"
Encoding.default_external = Encoding::UTF_8
Encoding.default_internal = Encoding::UTF_8

# @todo #/DEV Choose a framework for logging, it might be
#  - https://rubygems.org/gems/logging/versions/2.1.0
#  - https://github.com/TwP/logging
#  Logger should support colored output using any of
#  - http://errtheblog.com/posts/34-a-ruby-rainbow
#  - https://github.com/sickill/rainbow
#  For now FakeLog is used.
log = Lazylead::FakeLog.new

opts = Slop.parse(ARGV, strict: false, suppress_errors: true) do |o|
  o.banner = "Usage: lazylead [options]
Available options:"
  o.bool "-h", "--help", "Show these instructions"
  o.bool "--trace", "Show full stack trace in case of a problem"
  o.bool "--memory-dump", "Dump memory snapshot afterwards, to the console",
         default: false
  o.string "--pretty",
           "Logging format, e.g. short, full, compact (default: short)",
           required: true,
           default: "short"
  o.on "--no-colors", "Disable colors in the output" do
    Rainbow.enabled = false
  end
  o.string "--home",
           "Home directory (default: #{Dir.pwd})",
           default: ENV["LL_HOME"].nil? ? Dir.pwd : ENV["LL_HOME"]
  o.string "--sqlite",
           "SQLite database file name",
           default: "lazylead.db"
  o.string "--vcs4sql",
           "Home directory with database version control(vcs) scripts",
           default: "upgrades/sqlite"
  o.string "--smtp-host",
           "SMTP host for email notifications",
           required: true
  o.string "--smtp-port",
           "SMTP port for email notifications",
           required: true
  o.string "--smtp-host",
           "SMTP host for email notifications",
           required: true
  o.string "--smtp-user",
           "SMTP login for email notifications",
           required: true
  o.string "--smtp-pass",
           "SMTP password for email notifications",
           required: true
  o.bool "--testdata",
         "Apply the database vcs test data with migration scripts",
         default: false
  o.on "--verbose", "Enable extra logging information" do
    log.verbose
  end
  o.on "-v", "--version", "Show current version" do
    log.debug Lazylead::VERSION
    exit
  end
end
log.debug("Memory footprint at start is #{Lazylead::Allocated.new}")
cmd = lambda do
  Lazylead::CLI::App.new(log).run(opts.to_h)
  return 0
rescue StandardError => e
  log.error("#{e.message} (#{e.class.name})")
  log.error(Backtrace.new(e)) if opts["trace"]
  return -1
end
code = 0
if opts["memory-dump"]
  MemoryProfiler.report(top: 20) { code = cmd.call }.pretty_print
else
  code = cmd.call
end
log.debug("Memory footprint at the end is #{Lazylead::Allocated.new}")
exit(code) unless code.zero?
